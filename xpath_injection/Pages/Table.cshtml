@page
@model xpath_injection.Pages.TableModel
@{
}

<h2>User Table</h2>

@if (Model.IsAdmin)
{
    <p>Logged in as: Admin</p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Username</th>
                <th>Password</th>
                <th>User Type</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.Element("Username").Value</td>
                    <td>@user.Element("Password").Value</td>
                    <td>@(user.Parent.Name.LocalName == "AdminUsers" ? "Admin" : "Normal")</td>
                    <td>
                        <form method="post" asp-page-handler="Remove" asp-route-username="@user.Element("Username").Value">
                            <button type="submit" class="btn btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h3>Add User</h3>
    <form method="post" asp-page-handler="Add">
        <div class="form-group">
            <label for="newUsername">Username:</label>
            <input type="text" id="newUsername" name="NewUsername" class="form-control" />
        </div>
        <div class="form-group">
            <label for="newPassword">Password:</label>
            <input type="password" id="newPassword" name="NewPassword" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Add</button>
    </form>
}
else
{
    <p>Logged in as: Normal User</p>
}