@page
@model xpath_injection.Pages.TableModel

<h2>User Table</h2>

<p>Logged in as: @(Model.IsAdmin ? "Admin" : "Normal User")</p>

<form method="post" asp-page-handler="Logout" class="mb-3">
    <button type="submit" class="btn btn-primary">Logout</button>
</form>

<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text" id="searchTerm" name="SearchTerm" class="form-control" placeholder="Search...">
        <div class="input-group-append">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>
</form>

@if (Model.Users != null && Model.Users.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Username</th>
                <th>Role</th>
                <th>Phone</th>
                <th>Email</th>
                <th>SSN</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.Element("Login")?.Element("Username")?.Value</td>
                    <td>@user.Element("Personal")?.Element("Role")?.Value</td>
                    <td>@(Model.IsAdmin || Model.ViewSensitiveData ? user.Element("Personal")?.Element("Phone")?.Value : "Unavailable")</td>
                    <td>@(Model.IsAdmin || Model.ViewSensitiveData ? user.Element("Personal")?.Element("Email")?.Value : "Unavailable")</td>
                    <td>@(Model.IsAdmin || Model.ViewSensitiveData ? user.Element("Personal")?.Element("SSN")?.Value : "Unavailable")</td>
                </tr>
            }
        </tbody>
    </table>
}

@if (Model.IsAdmin)
{
    <h3>Add User</h3>
    <form method="post" asp-page-handler="Add">
        <div class="form-group">
            <label for="newUsername">Username:</label>
            <input type="text" id="newUsername" name="NewUsername" class="form-control" />
        </div>
        <div class="form-group">
            <label for="newPassword">Password:</label>
            <input type="password" id="newPassword" name="NewPassword" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Add</button>
    </form>
}