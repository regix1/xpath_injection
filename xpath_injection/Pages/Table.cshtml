@page
@model xpath_injection.Pages.TableModel
@{
}

<h2>User Table</h2>

@if (Model.IsAdmin)
{
    <p>Logged in as: Admin</p>

    <form method="post" asp-page-handler="Logout" class="mb-3">
        <button type="submit" class="btn btn-primary">Logout</button>
    </form>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Username</th>
                <th>Password</th>
                <th>Role</th>
                <th>Phone</th>
                <th>Email</th>
                <th>SSN</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@(user.Element("Login")?.Element("Username")?.Value ?? "")</td>
                    <td>@(user.Element("Login")?.Element("Password")?.Value ?? "")</td>
                    <td>@(user.Element("Personal")?.Element("Role")?.Value ?? "")</td>
                    <td>@(user.Element("Personal")?.Element("Phone")?.Value ?? "")</td>
                    <td>@(user.Element("Personal")?.Element("Email")?.Value ?? "")</td>
                    <td>@(user.Element("Personal")?.Element("SSN")?.Value ?? "")</td>
                    <td>
                        <form method="post" asp-page-handler="Remove" asp-route-username="@(user.Element("Login")?.Element("Username")?.Value ?? "")">
                            <button type="submit" class="btn btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h3>Add User</h3>
    <form method="post" asp-page-handler="Add">
        <div class="form-group">
            <label for="newUsername">Username:</label>
            <input type="text" id="newUsername" name="NewUsername" class="form-control" />
        </div>
        <div class="form-group">
            <label for="newPassword">Password:</label>
            <input type="password" id="newPassword" name="NewPassword" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Add</button>
    </form>
}
else
{
    <p>Logged in as: Normal User</p>

    <form method="post" asp-page-handler="Logout" class="mb-3">
        <button type="submit" class="btn btn-primary">Logout</button>
    </form>

    @if (Model.CurrentUser != null)
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Role</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>SSN</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@(Model.CurrentUser.Element("Login")?.Element("Username")?.Value ?? "")</td>
                    <td>@(Model.CurrentUser.Element("Personal")?.Element("Role")?.Value ?? "")</td>
                    <td>@(Model.CurrentUser.Element("Personal")?.Element("Phone")?.Value ?? "")</td>
                    <td>@(Model.CurrentUser.Element("Personal")?.Element("Email")?.Value ?? "")</td>
                    <td>@(Model.CurrentUser.Element("Personal")?.Element("SSN")?.Value ?? "")</td>
                </tr>
            </tbody>
        </table>
    }
    else
    {
        <p>User information not found.</p>
    }
}